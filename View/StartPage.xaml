<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Models.StartPage"
             xmlns:viewmodel="clr-namespace:RecipeApp.ViewModels"
             x:DataType="viewmodel:StartPageViewModel">
    <VerticalStackLayout>
        <Grid
            RowDefinitions="40"
            ColumnDefinitions="40, 15, Auto, 15, 40"
            HorizontalOptions="Center">
            <Label 
            Text="{Binding Date}"
                TextColor="LightPink"
                FontSize="28"
            Grid.Row="0"
            Grid.Column="2">
            </Label>
            <Button
                Text=" - "
                TextColor="Black"
                BackgroundColor="LightPink"
            Grid.Row="0"
            Grid.Column="0"
            Command="{Binding SubtractDateClickedCommand}">
            </Button>
            <Button
                Text=" + "
                TextColor="Black"
                BackgroundColor="LightPink"
            Grid.Row="0"
            Grid.Column="4"
            Command="{Binding AddDateClickedCommand}">
            </Button>
        </Grid>

        <CollectionView
                ItemsSource="{Binding Meals}">
            <CollectionView.ItemTemplate>
                <DataTemplate
                        x:DataType="{x:Type x:String}">
                    <Grid
                        RowDefinitions="60, 60, 20"
                        ColumnDefinitions="120"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Frame
                            Grid.Column="0"
                            Grid.Row="0">
                            <Label
                            Text="{Binding .}">
                            </Label>
                        </Frame>
                        <Button
                            Grid.Column="0"
                            Grid.Row="1"
                            Text="Recept ex"
                            TextColor="Black"
                            BackgroundColor="LightPink"
                            >
                        </Button>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label
            Text="{Binding RecipeTitle}">
        </Label>

    </VerticalStackLayout>
</ContentPage>