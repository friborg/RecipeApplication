<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Models.RegisterUserPage"
             xmlns:viewmodel="clr-namespace:RecipeApp.ViewModels"
             x:DataType="viewmodel:RegisterUserPageViewModel"
             BackgroundColor="WhiteSmoke">
    <VerticalStackLayout>
        <Entry
            Placeholder="Username"
            PlaceholderColor="SlateGray"
            Text="{Binding UserNameInput}"
            TextColor="Black"
            FontSize="Subtitle"
            HorizontalOptions="Start"
            />
        <Entry
            Placeholder="Password"
            PlaceholderColor="SlateGray"
            Text="{Binding PasswordInput}"
            TextColor="Black"
            FontSize="Subtitle"
            HorizontalOptions="Start"
            />
        <Button
            Text="Register User"
            TextColor="Teal"
            BorderColor="Teal"
            BorderWidth="2"
            FontSize="20"
            FontFamily="Recoleta"
            HorizontalOptions="Center"
            Clicked="OnRegisterClicked">
        </Button>
        <Label
            x:Name="StatusText"
            Text="{Binding Status}"
            TextColor="Teal">
        </Label>
    </VerticalStackLayout>
</ContentPage>